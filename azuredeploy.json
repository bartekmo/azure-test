{
	"$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/VNET.json",
	"contentVersion": "1.0.0.0",
	"parameters" : {
		"location": {
			"type" : "String",
			"defaultValue" : "West Europe"
		},
		"vmName" : {
			"type" : "String",
			"defaultValue" : "Bogdan-ARM-VM"
		},
		"virtualNetworkName":{
			"type" : "string",
			"defaultValue":"Bogdan-ARM-VirtualNetwork"
		},
		"addressPrefix":{
			"type" : "string",
			"defaultValue" : "10.0.0.0/16"
		},
		"subnet1Name": {
			"type" : "string",
			"defaultValue" : "Bogdan-ARM-Subnet-Vienna"
		},
		"subnet2Name": {
			"type" : "string",
			"defaultValue" : "Bogdan-ARM-Subnet-Innsbruck"
		},
		"subnet1Prefix" : {
			"type" : "string",
			"defaultValue" : "10.0.1.0/24"
		},
		"subnet2Prefix" : {
			"type" : "string",
			"defaultValue" : "10.0.100.0/24"
		},
		"vmSize": {
			"type": "string",
			"defaultValue": "A1",
			"allowedValues" : [
				"A0","A1","A2","A3","A4","A5","A6","A7"
			],
			"metadata": {
				"Description": "VM size"
			}
		}
	},
	"variables" : {
		"cloudServiceName" : "bogdan-arm-vm"
	},
	"resources": [
	{
		"apiVersion": "2014-06-01",
		"type" : "Microsoft.ClassicCompute/domainNames",
		"location" : "[parameters('location')]",
		"name" : "[variables('cloudServiceName')]",
		"properties" : {
			"label" : "[variables('cloudServiceName')]",
			"hostName" : "[concat(variables('cloudServiceName'),'.cloudapp.net')]"
		}
	},
	{
		"apiVersion": "2014-06-01",
		"type" : "Microsoft.ClassicNetwork/virtualNetworks",
		"name" : "[parameters('virtualNetworkName')]",
		"location" : "[parameters('location')]",
		"properties" : {
			"addressSpace": {
				"addressPrefixes": [
					"[parameters('addressPrefix')]"
				]
			},
			"subnets" : [
			{
				"name" : "[parameters('subnet1Name')]",
				"addressPrefix": "[parameters('subnet1Prefix')]"
			},
			{
				"name" : "[parameters('subnet2Name')]",
				"addressPrefix": "[parameters('subnet2Prefix')]"
			}
			]
		}
	},
	{
		"apiVersion": "2014-06-01",
		"type": "Microsoft.ClassicCompute/virtualMachines",
		"name": "[variables('cloudServiceName')]",
		"location": "[parameters('location')]",
		"dependsOn" : [
			"[concat('Microsoft.ClassicNetwork/virtualNetworks/',parameters('virtualNetworkName'))]",
			"[concat('Microsoft.ClassicCompute/domainNames/',variables('cloudServiceName'))]"
		],
		"properties": {
			"hardwareProfile": {
				"platformGuestAgent" : true,
				"size": "[parameters('vmSize')]",
				"deploymentName": "[variables('cloudServiceName')]",
				"deploymentLabel": "[variables('cloudServiceName')"
			},
			"domainName" : {
				"name" : "[variables('cloudServiceName')]",
				"tyoe" : "Microsoft.ClassicCompute/domainNames"
			},
			"storageProfile": {
				"operatingSystemDisk" : {
					"diskName": "bogdan-arm-osdisk",
					"operatingSystem" : "Linux",
					"ioType" : "Standard",
					"vhdUri": "[concat('https://cudademo.blob.core.windows.net/vhds/','GWAY-5.4.3-161.vhd')]",
					"caching": "ReadWrite",
					"storageAccount" : {
						"name" : "cudademo",
						"type" : "Microsoft.ClassicStorage/storageAccounts"
					}
				}
			},
			"networkProfile" : {
				"inputEndpoints" : [
				{
					"endpointName" : "MGMT",
					"privatePort" : 807,
					"publicPort" : 807,
					"protocol" : "tcp"
				},
				{
					"endpointName" : "SSH",
					"privatePort" : 22,
					"publicPort" : 22,
					"protocol" : "tcp"
				}
				],
				"virtualNetwork": {
					"subnetNames" : [
						"[parameters('subnet2Name')]"
					],
					"name" : "[parameters('virtualNetworkName')]",
					"type" : "Microsoft.ClassicNetwork/virtualNetworks"
				}
			}
		}
	}
	]
}
