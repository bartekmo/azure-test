{
	"$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/VNET.json",
	"contentVersion": "1.0.0.0",
	"parameters" : {
		"location": {
			"type" : "String",
			"defaultValue" : "West Europe"
		},
		"vmName" : {
			"type" : "String",
			"defaultValue" : "Bogdan-ARM-VM"
		},
		"virtualNetworkName":{
			"type" : "string",
			"defaultValue":"Bogdan-ARM-VirtualNetwork"
		},
		"addressPrefix":{
			"type" : "string",
			"defaultValue" : "10.0.0.0/16"
		},
		"subnet1Name": {
			"type" : "string",
			"defaultValue" : "Bogdan-ARM-Subnet-Vienna"
		},
		"subnet2Name": {
			"type" : "string",
			"defaultValue" : "Bogdan-ARM-Subnet-Innsbruck"
		},
		"subnet1Prefix" : {
			"type" : "string",
			"defaultValue" : "10.0.1.0/24"
		},
		"subnet2Prefix" : {
			"type" : "string",
			"defaultValue" : "10.0.100.0/24"
		},
		"vmSize": {
			"type": "string",
			"defaultValue": "Basic_A1",
			"allowedValues" : [
				"Basic_A0","Basic_A1","Basic_A2","Basic_A3","Basic_A4","A5","A6","A7","A8","A9","A10","A11"
			],
			"metadata": {
				"Description": "VM size"
			}
		}
	},
	"variables" : {
		"cloudServiceName" : "bogdan-arm-vm"
	},
	"resources": [
	{
		"apiVersion": "2014-06-01",
		"type" : "Microsoft.ClassicCompute/domainNames",
		"location" : "[parameters('location')]",
		"name" : "[variables('cloudServiceName')]",
		"properties" : {
			"label" : "[variables('cloudServiceName')]",
			"hostName" : "[concat(variables('cloudServiceName'),'.cloudapp.net')]"
		}
	},
	{
		"apiVersion": "2014-06-01",
		"type": "Microsoft.ClassicCompute/virtualMachines",
		"name": "[variables('cloudServiceName')]",
		"location": "[parameters('location')]",
		"dependsOn" : [
			"[concat('Microsoft.ClassicCompute/domainNames/',variables('cloudServiceName'))]"
		],
		"properties": {
			"hardwareProfile": {
				"platformGuestAgent" : true,
				"size": "[parameters('vmSize')]",
				"deploymentName": "[variables('cloudServiceName')]",
				"deploymentLabel": "[variables('cloudServiceName')"
			},
			"domainName" : {
				"id" : "[resourceId('Microsoft.ClassicCompute/domainNames',variables('cloudServiceName'))]",
				"name" : "[variables('cloudServiceName')]",
				"type" : "Microsoft.ClassicCompute/domainNames"
			},
			"storageProfile": {
				"operatingSystemDisk" : {
					"sourceImageName": "https://cudademo.blob.core.windows.net/vhd/GWAY-5.4.3-161.vhd",
					"storageAccount" : {
						"id" : "/subscriptions/ee21fa5b-30b7-45d1-81c9-919085006474/resourceGroups/Default-Storage-WestEurope/providers/Microsoft.ClassicStorage/storageAccounts/cudademo",
						"name" : "cudademo",
						"type" : "Microsoft.ClassicStorage/storageAccounts"
					}
				}
			},
			"networkProfile" : {
				"inputEndpoints" : [
				{
					"endpointName" : "MGMT",
					"privatePort" : 807,
					"publicPort" : 807,
					"protocol" : "tcp"
				},
				{
					"endpointName" : "SSH",
					"privatePort" : 22,
					"publicPort" : 22,
					"protocol" : "tcp"
				}
				]
			}
		}
	}
	]
}
